
		<div class="col-md-6 pull-left col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<span class="glyphicon glyphicon-th-list"></span> Informations générales
				</div>
 				<div class="panel-body">
 				Le <b>{{event.startDatetime|date("d/m/Y", "Europe/Paris")}}</b> de <b>{{event.startDatetime|date("H:i", "Europe/Paris")}}</b> à <b>{{event.endDatetime|date("H:i", "Europe/Paris")}}</b>
 					<b> Priorité </b> : {{ event.priorite }}<br />
					<b> Client </b>: {{ event.client.entreprise }} <br />
					<b> Type Client </b>: {{ event.client.type }} <br />
					<b> Description Visiteurs : </b> {{event.descriptionVisiteurs}} <br />
					<b> Thématique</b> : {{ event.theme }} <br />
					<b> Nombre de partcipants </b> : {{ event.nombreParticipants }} <br />
					<b> Langue </b> : {{ event.langue }}  <br />				
				</div>
			</div>
			<div class="panel panel-default">
					<div class="panel-heading">
						<span class="glyphicon glyphicon-inbox"></span> Logistique Complémentaire
					</div>
					<div class="panel-body">
						{% for logistique in event.otherInfos %}
							{{ logistique }} <br />
						{% endfor %}
					</div>
			</div>

			<div class="panel panel-default">
					<div class="panel-heading">
						<span class="glyphicon glyphicon-align-center"></span> Information Complémentaire
					</div>
					<div class="panel-body">
						{{ event.infoComplementaire }}
					</div>
			</div>
		</div>
		<div class="col-md-6 pull-right col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<span class="glyphicon  glyphicon glyphicon-send"></span> Prise de Contact
				</div>
				<div class="panel-body">
					<b>Responsable :</b> {{ event.client.civilite }} {{ event.client.nom }} {{ event.client.prenom}} <br />
					<b>Mail : </b> {{ event.client.adresseMail}} <br/>
					<b>Tél. :</b> {{ event.client.telephone}} <br/>

				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					<span class="glyphicon glyphicon-refresh"></span> Progression de la visite 
				</div>
				<div class="panel-body">
					<div class="progress">
						<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{ event.step|abs/7 * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{ event.step|abs/7 * 100}}%; height:50px;"></div>
					</div>
					{% if event.step<=0 %}
						<div class="alert alert-warning">
						  <strong>Etape {{ event.step|abs  }}</strong> en cours de validation.
						</div>
					{% else %}
						<div class="alert alert-success">
						  <strong>Etape {{ event.step|abs  - 1 }}</strong> validée.
						</div>
					{% endif %}

				</div>


		
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					<span class="glyphicon glyphicon-cog"></span> Gestion de la visite
				</div>
				<div class="panel-body">
					<div class="col-xs-12 col-md-6">
						<span class="glyphicon glyphicon-bullhorn" style="border-radius:50%; background-color:#2ecc71;padding : 3px; font-size:12px; color:#fff;"></span> <b>Conférenciers</b> :  
						<ul>
							{% for participant in Participants %}
								<li class="tooltipped" data-delay="50" data-tooltip="{{participant.user.telephone}}, {{participant.user.email}}">{{participant.user.prenom}} {{participant.user.nom}}</li>
							{% endfor %}
							{% for i in 1..(event.nbUserMax - Participants|length) %}
								<li>
									N/A

								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="col-xs-12 col-md-6">
						<span class="glyphicon glyphicon-thumbs-up" style="border-radius:50%; background-color:#f1c40f;padding : 3px; font-size:12px; color:#fff;"></span>  <b>Reponsable Qualité</b> :<br /> 
						<ul>
							<li>{{event.respoQuali.prenom }} {{event.respoQuali.nom }}</li><br />
						</ul>
					</div>
				</div>
		
			</div>

			

	</div>
