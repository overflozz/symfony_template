
		<div class="col-md-12"><h5 class="pull-left">   Visite {{ event.id }}</h3> 	<button type="button" id="closeModal" class="btn red lighten-1 pull-right modal-close" style="color:#fff; margin-top : 10px;" data-dismiss="modal"><span class="glyphicon glyphicon-remove "></span></button></div>
	<br />
		<div class="divider"></div>
	
				
			<div class="col-md-12">
		
		<div style="text-align:center">Le <b>{{event.startDatetime|date("d/m/Y", "Europe/Paris")}}</b> de <b>{{event.startDatetime|date("H:i", "Europe/Paris")}}</b> à <b>{{event.endDatetime|date("H:i", "Europe/Paris")}}</b></div>
		<br /><br/>

		<div class="divider"></div>
		<div class="row">
			<div class="col-md-6 col-xs-12 pull-left">

		<b><span class="glyphicon glyphicon-bullhorn" style="border-radius:50%; background-color:#2ecc71;padding : 3px; font-size:12px; color:#fff;"></span> Conférenciers : </b>
		
				<ul>
				{% for participant in Participants %}
					<li> {{participant.user.prenom}} {{participant.user.nom}}      {% if participant.user == app.user%} <button id="suppr_conferencier" type="button" class="btn red lighten-1" style="color:#fff"><span class='glyphicon glyphicon-remove'></span> <span class="hidden-xs"> Supprimer</span></button>{% endif %}</li>
				{% endfor %}
				{% for i in 1..(event.nbUserMax - Participants|length) %}
					<li>
						N/A
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") and userParticipe == false and i==1 %}
							<button id="ajout_conferencier" class="btn btn-primary" type="button"><span class='glyphicon glyphicon-plus'></span> S'ajouter</button>
						{% endif %}
					</li>
				{% endfor %}
				</ul>
			</div>

		<div class="col-md-6 col-xs-12 pull-right">
			<span class="glyphicon glyphicon-thumbs-up" style="border-radius:50%; background-color:#f1c40f;padding : 3px; font-size:12px; color:#fff;"></span>  <b>Reponsable Qualité</b> : 
			<ul>
				<li > {{event.respoQuali.prenom }} {{event.respoQuali.nom }}  </li>
			</ul>
		</div>
		<br /><br />
		</div>
		<div class="divider"></div>
		<div class="row">
			<div class="col-md-6 pull-left">
				<b>Langue</b> : {{ event.langue }}<br />
				<b>Client</b> : {{ event.entrepriseClient }} <br />

			</div>
			<div class="col-md-6  pull-right">
				<b>Nombre de visiteurs</b> : {{ event.nombreParticipants }} <br />
				<b>Type de public</b> : {{ event.typeClient }} <br />
			</div>
		</div>
	
		<br />
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") and userParticipe == true %}
			<a href="{{ path('of_calendar_view_visite',{'id' : event.id, 'etape' : 0})}}" type="button" id="viewModal" class="btn btn-primary col-xs-12" ><span class="glyphicon glyphicon-eye-open"></span> Voir</a>
		{% else  %}
			<a href="{{ path('of_calendar_view_visite',{'id' : event.id, 'etape' : 0})}}" type="button" id="viewModal" class="btn btn-primary col-xs-12 hidden" ><span class="glyphicon glyphicon-eye-open"></span> Voir</a>
		{% endif %}

	</div>
		
<script>

	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	$(document).ready(function(){

		$('.modal-content').on("click", "#ajout_conferencier",function(){
			var $div = $("#ajout_conferencier").parent();
			$div.html('');
			$('#loading-image').clone().appendTo($div);
			$('#loading-image').fadeIn(1000);
			$.ajax({
				url: "{{ path('of_calendar_ajoutUserEvent', {'id' : event.id})}}",
				method: "post",
				data:{idUser: {{ app.user.id}}}

			}).done(function(){
				$("#viewModal").removeClass("hidden").hide().fadeIn(1000);

				$('#loading-image').fadeOut(1000);
				$div.html("{{ app.user.prenom}} {{ app.user.nom}}<button id='suppr_conferencier'  class='btn red lighten-1' style='color:#fff;' type='button' ><span class='glyphicon glyphicon-remove'></span><span class='hidden-xs'> Supprimer</span></button>");
					//Materialize.toast('Vous êtes maintenant conférencier sur cette visite.', 3000);
			});
		});
		$('.modal-content').on("click", "#suppr_conferencier",function(){
			var $div = $("#suppr_conferencier").parent();
			$div.html('');
			$('#loading-image').clone().appendTo($div);
			$('#loading-image').show();
			$.ajax({
				url: "{{ path('of_calendar_supprUserEvent', {'id' : event.id})}}",
				method: "post",
				data:{idUser: {{ app.user.id}}}

			}).done(function(){
				$("#viewModal").fadeOut(1000);
				
				$('#loading-image').fadeOut(500);
				//Materialize.toast('Vous n\'êtes plus conférencier sur cette visite.', 3000);
				$div.html("N/A <button id='ajout_conferencier' class='btn btn-primary' type='button' ><span class='glyphicon glyphicon-plus'></span> S'ajouter</button>");

			});
		});
	});
	{% endif %}
	
</script>