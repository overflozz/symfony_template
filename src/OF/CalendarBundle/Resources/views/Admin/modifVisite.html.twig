
{% extends "OFCalendarBundle::Admin/layout.html.twig" %}


{% block body %}
<a href="{{path('of_calendar_visitesadmin')}}">  < Retour à l'administration des visites</a><br /> <br />
<div class="col-md-8 col-md-offset-2 col-xs-12"> 
	<div class="panel panel-default">
	<div class="panel-heading">Modification de visite</b></div>   
		<div class="panel-body">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}

  {{ form_errors(form) }}



<div class="form-group">

<h6 style="margin:20px;padding-left: 20px; padding-top:10px; padding-bottom:10px; border-left:4px solid var(--color-secondaire);"><b>Informations Logistiques </b></h6>
<div class="row">
<div class="col-sm-4">{{ form_row(form.startDate, {'attr': {'class': 'datepicker', 'placeholder' : ' Cliquez pour choisir la date'}}) }} </div>

<div class="col-sm-4" style="margin-top: -16px;">

<div class="" style="margin-top:16px; margin-left:20px;font-weight:700; font-size: 0.8rem;color: #9e9e9e;">Heure Début</div>

<div class="col-sm-6">{{ form_widget(form.heureDebut.hour) }}</div>
<div class="col-sm-6">{{ form_widget(form.heureDebut.minute) }}</div>
</div>
<div class="col-sm-4"  style="margin-top: -16px;">

<div class="" style="margin-top:16px; margin-left:20px;font-weight:700; font-size: 0.8rem;color: #9e9e9e;">Heure Fin</div>

<div class="col-sm-6">{{ form_widget(form.heureFin.hour) }}</div>
<div class="col-sm-6">{{ form_widget(form.heureFin.minute) }}</div>

</div>

</div>
<div class="row">
<div class="col-md-6">{{form_row(form.lieurdv)}}</div>
<div class="col-md-6">{{form_row(form.lieudepart)}}</div>

<div class="col-sm-6">{{ form_row(form.nombreParticipants) }}</div>


<div class="col-sm-6 ">{{form_row(form.langue)}}</div>
</div>
<div class="row">
<h6 style="margin:20px;padding-left: 20px; padding-top:10px; padding-bottom:10px; border-left:4px solid var(--color-secondaire);"><b>Client et Informations de contact </b></h6>
<div class="col-md-2">{{form_row(form.civiliteClient)}}</div>
<div class="col-md-5">{{form_row(form.nomClient)}}</div>
<div class="col-md-5">{{form_row(form.prenomClient)}}</div>


<div class="col-md-12">{{form_row(form.entrepriseClient)}}</div>
<div class="col-md-6">{{form_row(form.typeClient)}}</div>
<div class="col-md-6">{{form_row(form.serviceClient)}}</div>

<div class="col-md-6">{{form_row(form.villeClient)}}</div>
<div class="col-md-6">{{form_row(form.paysClient)}}</div>
<div class="col-md-6">{{form_row(form.adresseMailClient)}}</div>
<div class="col-md-6">{{form_row(form.telephoneClient)}}</div>
<div class="col-md-12">{{form_row(form.commentaireClient)}}</div>
<div class="col-md-4">{{form_row(form.statutClient)}}</div>
<div class="col-md-4">{{form_row(form.nationaliteClient)}}</div>
<div class="col-md-4">{{form_row(form.handicap)}}</div>
</div>


<h6 style="margin:20px;padding-left: 20px; padding-top:10px; padding-bottom:10px; border-left:4px solid var(--color-secondaire);"><b>Cadre de la Visite </b></h6>
<div class="col-md-8">{{form_row(form.respoQuali)}}</div>
<div class="col-md-4">{{ form_row(form.nbUserMax) }}</div>

<div class="col-md-12">{{ form_row(form.contexte) }}</div>



</div>


{{ form_rest(form) }}
{{ form_end(form) }}
</div></div></div>
    {% endblock %}

    {% block javascript %}


	{{ parent()}}
	    <script>
          
	{% block script_menu_active %}
		$link_active = "#calendar";
	{% endblock %}

  //   	$( ".datepicker" ).datepicker({
		//   dateFormat: "yy-mm-dd 00:00:00"
		// });
  //   	$( '.datepicker' ).datepicker("option", "dateFormat", "yy-mm-dd 00:00:00");

  $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 3, // Creates a dropdown of 15 years to control year
    monthsFull: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
 	weekdaysShort: ['Dim', 'Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam'],
  	today: 'aujourd\'hui',
 	clear: 'effacer',
 	
    default: 'now', // Set default time
    formatSubmit: "yyyy-mm-dd 00:00:00"
  });
    $('.timepicker').pickatime({
    default: 'now', // Set default time
    fromnow: 0,       // set default time to * milliseconds from now (using with default = 'now')
    twelvehour: false, // Use AM/PM or 24-hour format
    donetext: 'OK', // text for done-button
    cleartext: 'Clear', // text for clear-button
    canceltext: 'Cancel', // Text for cancel-button
    autoclose: false, // automatic close timepicker
    ampmclickable: true, // make AM PM clickable
    aftershow: function(){} //Function for after opening timepicker  
  });
      
      $( document ).ready(function() {  
      var valueDate= $("input#of_calendarbundle_event_startDate").attr('value');
      $("input[name='of_calendarbundle_event[startDate]_submit']").attr('value', valueDate);
     });
           
      		
   			
	</script>
{% endblock %}