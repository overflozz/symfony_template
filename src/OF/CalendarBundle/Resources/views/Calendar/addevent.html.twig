{# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}
  <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Ajouter une visite</h4>
          </div>
          <div class="modal-body">
            


  {# Les erreurs générales du formulaire. #}

  {{ form_errors(form) }}



<div class="form-group">

<div class="col-sm-4">Date :{{ form_widget(form.startDate, {'attr': {'class': 'datepicker', 'placeholder' : ' Cliquez '}}) }} </div>
<div class="col-sm-4">Heure de début : {{ form_widget(form.heureDebut) }}</div>
<div class="col-sm-4"> Heure de fin : {{ form_widget(form.heureFin, {'attr': {}}) }} </div><br />

<div class="col-md-7">Client : {{form_widget(form.client)}}</div>
<div class="col-md-5">Nombre de participants  :{{ form_widget(form.nombreParticipants) }}</div>
<div class="col-md-12">Responsable Qualité : {{form_widget(form.respoQuali)}}</div>


<div class="col-md-4 ">Langue : {{form_widget(form.langue)}}</div>
<div class="col-md-8">Theme : {{ form_widget(form.theme) }}</div>
<div class="col-md-12">Objectif : {{ form_widget(form.objectif) }}</div>
<div class="col-md-12">Description : {{ form_widget(form.description) }}</div>


</div>
          </div>
          <div class="modal-footer">
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

        </div>

{{ form_rest(form) }}
{{ form_end(form) }}
      </div>
    </div>
  </div>