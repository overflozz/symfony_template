{% trans_default_domain 'FOSUserBundle' %}
<div class="panel-default panel col-md-8 col-md-offset-2 col-xs-12">
	<div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Modification de profil <a href="{{path('fos_user_change_password')}}" class="right">Modifier le mot de passe</a></div>
	<div class="panel-body">
    <br />
{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    <div class="col-md-6 col-sm-12">
    {{ form_row(form.email) }}
  </div>
    <div class="col-md-6 col-sm-12">
    {{ form_row(form.telephone) }}
</div>
  <div class="col-md-12 col-sm-12">
    {{ form_row(form.rib) }}
    </div>
<div class="row">
  <div class="col-md-6 col-sm-12">
    {{ form_row(form.username)}}
    </div>
      <div class="col-md-6 col-sm-12">
    Image de profil :
    {{ form_widget(form.profilePictureFile) }}
</div>
</div>
<div class="row">
  <div class="col-md-6 col-sm-12">
    Mot de passe actuel : {{ form_widget(form.current_password) }}
</div>


  <div class="col-md-6 col-sm-12">
{{ form_end(form) }}
</div>
</div>
</div>
</div>