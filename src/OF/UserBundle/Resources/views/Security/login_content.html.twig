{# Fichier qui overwrite le vendor/friendsofsymfony/FOSUSERBUNDLE/ressources/views/Security/#}

{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}"  method="post">
        {% if error %}
             <div class="alert alert-danger col-md-4 col-md-offset-4 disapear" fadeOutDuration="20000">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <div id="loginbloc">
       
        <br />
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="input-group">
            <div class="input-group-addon">@</div>
            <input class="form-control" type="text" id="inlineFormInputGroup" name="_username" value="{{ last_username }}" placeholder="Username" required="required" />
            
        </div>
        <br />
        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></div>
            <input class="form-control" type="password" id="inlineFormInputGroup" name="_password" placeholder="Password" required="required" />
        </div>

        <div  class="form-group" style="margin-top:20px;">
            <input type="checkbox" class="form-check" id="remember_me" name="_remember_me" value="on" style="float:left; margin-right:5px;"/>  <span style="color:#7f8c8d;">Remember me</span>
            <a href="{{path("fos_user_resetting_request")}}" class="pull-right">Mot de passe oubli√© ?</a><br />
        </div>

    </div>

    <input type="submit" class="col-xs-12 btn-lg buttonLogin" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<span  style="text-align:center;">Not a member yet ? <a href="{{path("fos_user_registration_register") }}" > Sign up now ! </a></span>


