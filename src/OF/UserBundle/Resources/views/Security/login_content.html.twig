{# Fichier qui overwrite le vendor/friendsofsymfony/FOSUSERBUNDLE/ressources/views/Security/#}

{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}"  method="post">
        {% if error %}
             <div class="alert alert-danger col-md-12 disapear" fadeOutDuration="20000">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <div id="loginbloc" style="">
       
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="input-group">
            <input class="form-control col-xs-12 " type="text" id="inlineFormInputGroup" name="_username" value="{{ last_username }}" placeholder="Username" required="required" />
            
        </div>
        <div class="input-group">
            <input class="form-control col-xs-12" type="password" id="inlineFormInputGroup" name="_password" placeholder="Password" required="required" />
        </div>

  <div class="row">
        <div  class="form-group" style="margin-top:20px;">
            <input type="checkbox" id="remember_mea" name="_remember_me" value="on" style="float:left; margin-right:10px;"/>  <span style="color:#7f8c8d;"></span> <label for="remember_mea">Remember Me</label>

            <a href="{{path("fos_user_resetting_request")}}" class="pull-right">Mot de passe oubli√© ?</a><br />
        </div>
</div>
    </div>

    <input type="submit" class="col-xs-12 btn btn-primary btn waves-effect waves-light" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<span  style="text-align:center; color:#95a5a6">Not a member yet ? <a href="{{path("fos_user_registration_register") }}" class="pull-right"> Sign up now ! </a></span>


