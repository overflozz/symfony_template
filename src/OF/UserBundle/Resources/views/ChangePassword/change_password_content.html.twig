{% trans_default_domain 'FOSUserBundle' %}
<div class="panel-default panel col-md-8 col-md-offset-2 col-xs-12">
	<div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Modification de mot de passe </div>
	<div class="panel-body">
		{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
		    {{ form_widget(form) }}
		    <div>
		        <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
		    </div>
		{{ form_end(form) }}
</div>
</div>
